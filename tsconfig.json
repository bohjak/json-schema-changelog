{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "include": ["lib/index.ts"],

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outFile": "dist/index.d.ts"
  }
}